<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserEditProfileActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="32dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/profileImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/default_picture"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/circular_gray"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/username_field"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            />

        <Button
            android:id="@+id/change_username_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#086a2d"
            android:text="Change" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/email_field"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            />

<!--        <Button-->
<!--            android:id="@+id/change_email_btn"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="10dp"-->
<!--            android:backgroundTint="#086a2d"-->
<!--            android:text="Change" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/phone_field"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            />

        <Button
            android:id="@+id/change_phone_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#086a2d"
            android:text="Change" />
    </LinearLayout>

